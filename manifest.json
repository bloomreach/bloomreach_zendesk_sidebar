{
  "name": "Bloomreach Engagement",
  "author": {
    "name": "Paul Edwards",
    "email": "support@bloomreach.com",
    "url": "https://www.bloomreach.com"
  },
  "defaultLocale": "en",
  "private": false,
  "location": {
    "support": {
      "ticket_sidebar": {
        "url": "assets/iframe.html",
        "flexible": true
      }
    }
  },
  "version": "1.1.0",
  "frameworkVersion": "2.0",
  "parameters": [
    {
      "name": "ENGAGEMENT_PROJECT",
      "type": "text",
      "secure": false,
      "required": true
    },
    {
      "name": "ENGAGEMENT_PROJECT_NAME",
      "type": "text",
      "secure": false,
      "required": true
    },
    {
      "name": "ENGAGEMENT_HOSTNAME",
      "type": "url",
      "secure": false,
      "required": true,
      "default": "app.exponea.com"
    },
    {
      "name": "ENGAGEMENT_API_HOSTNAME",
      "type": "url",
      "secure": false,
      "required": true,
      "default": "api.exponea.com"
    },
    {
      "name": "ENGAGEMENT_TOKEN",
      "type": "text",
      "secure": false,
      "required": true
    },
    {
      "name": "ENGAGEMENT_IDENTIFIER",
      "type": "text",
      "secure": false,
      "required": true,
      "default": "registered"
    },
    {
      "name": "ENGAGEMENT_PAYLOAD",
      "type": "multiline",
      "secure": false,
      "required": false
    },
    {
      "name": "ENGAGEMENT_MANAGED_API_URL",
      "type": "url",
      "secure": false,
      "required": false
    }
  ],
  "domainWhitelist": [
    "{{setting.ENGAGEMENT_API_HOSTNAME}}"
  ]
}